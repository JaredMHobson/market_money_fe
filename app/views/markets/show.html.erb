<div class="container text-center p-0">
  <h1 class="headers bg-secondary text-white"><%= @facade.market.name %></h1>
  <div class="row justify-content-center">
    <div class="col">
      <ul class="no_bullets">
        <li><%= @facade.market.street %></li>
        <li><%= @facade.market.city_state_zip %></li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col text-start p-5" id="market_vendors_list" >
      <h4>Vendors at our Market:</h4>
      <ul class="no_bullets">
        <% @facade.market_vendors.each do |vendor| %>
          <li><%= link_to vendor.name, vendor_path(vendor.id) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

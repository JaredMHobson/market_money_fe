<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col">
      <h1 class="headers bg-dark text-white">Markets</h1>
      <table id="markets_table" class="table table-striped table-bordered">
        <thead class="headings">
          <tr>
            <th>Name</th>
            <th>City</th>
            <th>State</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @facade.markets.each do |market| %>
            <tr id="market_<%= market.id %>_info">
              <td><%= market.name %></td>
              <td><%= market.city %></td>
              <td><%= market.state %></td>
              <td><%= button_to 'More Info', market_path(market.id), method: :get %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container text-center p-0" id="vendor_info">
  <h1 class="headers bg-secondary text-white"><%= @facade.vendor.name %></h1>
  <div class="row">
    <div class="col-6 text-start p-5">
      <h4>Contact Info:</h4>
      <ul class="no_bullets">
        <li>Name: <%= @facade.vendor.contact_name %></li>
        <li>Phone: <%= @facade.vendor.contact_phone %></li>
      </ul>

      <p>Credit Accepted?: <%= @facade.vendor.credit_accepted_yesno %></p>

      <p>Description: <%= @facade.vendor.description %></p>
    </div>
    <div class="col-6">
    </div>
  </div>
</div>
